generator client {
  provider = "prisma-client"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
}

model Item {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
}

enum Shelf {
  TO_READ
  READ
  UPCOMING
}

model Book {
  id     String  @id @default(cuid())
  title  String
  author String?
  shelf  String

  coverUrl String?

  releaseDate DateTime?
  finishedAt  DateTime?
  rating      Float?
  review      String?

  genres Json @default("[]") // âœ… array of strings stored as JSON

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
